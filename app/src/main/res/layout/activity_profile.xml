<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/profile">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginTop="180dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top">
            
            <ImageView
                android:id="@+id/panah"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/panah"
                android:layout_gravity="center"
                android:layout_marginRight="95dp"
                android:layout_marginLeft="20dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="40dp"
                android:textColor="@color/biru"
                android:fontFamily="@font/montserra_bold"/>
        </LinearLayout>
        
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="740dp"
           android:orientation="vertical"
           android:gravity="center_horizontal">

           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/fotoProfil"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:srcCompat="@drawable/contoh"
               app:shapeAppearanceOverlay="@style/circular"
               android:padding="5dp"
               app:strokeWidth="3dp"
               android:layout_marginTop="12dp"
               app:strokeColor="@color/biru"/>

           <TextView
               android:id="@+id/usernameProfil"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Restu Kharrisa Andini"
               android:fontFamily="@font/montserrat_semibold"
               android:textSize="20dp"
               android:textAlignment="center"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:text="restukharrisa@gmail.com"
               android:fontFamily="@font/montserrat_light"/>

           <androidx.cardview.widget.CardView
               android:layout_width="400dp"
               android:layout_height="200dp"
               android:backgroundTint="@color/biru"
               app:cardCornerRadius="40dp"
               android:layout_marginTop="15dp"
               >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:layout_marginHorizontal="50dp"
                  android:layout_marginVertical="20dp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginBottom="10dp"
                      >

                      <ImageView
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:background="@drawable/baseline_location_pin_24"
                          android:layout_gravity="center"

                          android:layout_marginRight="30dp"/>

                      <TextView
                          android:id="@+id/lokasi"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Pekanbaru"
                          android:textSize="18sp"
                          android:layout_gravity="center"
                          android:fontFamily="@font/montserrat_regular"
                          android:textColor="@color/white"
                          />

                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginBottom="10dp"
                      >

                      <ImageView
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:background="@drawable/baseline_contact_phone_24"
                          android:layout_gravity="center"
                          android:layout_marginRight="30dp"/>

                      <TextView
                          android:id="@+id/noHP"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="081278075390"
                          android:layout_gravity="center"
                          android:textSize="18sp"
                          android:fontFamily="@font/montserrat_regular"
                          android:textColor="@color/white"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginBottom="10dp"
                      >

                      <ImageView
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:background="@drawable/baseline_people_alt_24"
                          android:layout_gravity="center"
                          android:layout_marginRight="30dp"/>

                      <TextView
                          android:id="@+id/gender"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Female"
                          android:textSize="18sp"
                          android:layout_gravity="center"
                          android:fontFamily="@font/montserrat_regular"
                          android:textColor="@color/white"
                          />
                  </LinearLayout>
              </LinearLayout>



           </androidx.cardview.widget.CardView>

           <LinearLayout
               android:layout_width="400dp"
               android:layout_height="match_parent"
               android:layout_marginHorizontal="10dp"
               android:layout_marginTop="40dp"
               android:orientation="vertical">

               <LinearLayout
                   android:id="@+id/historyLayout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingHorizontal="20dp"
                   android:paddingVertical="20dp"
                   android:background="@drawable/custom1"
                   >

                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/history"
                       android:layout_gravity="center"
                       android:layout_marginRight="30dp"
                       android:layout_marginLeft="5dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="History"
                       android:fontFamily="@font/montserrat_semibold"
                       android:textSize="20dp"
                       android:textColor="@color/biru"
                       android:layout_marginRight="200dp"
                       android:layout_gravity="center"/>

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/logoutLayout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingHorizontal="20dp"
                   android:paddingVertical="20dp"
                   android:background="@drawable/custom1"
                   >

                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/logout"
                       android:layout_gravity="center"
                       android:layout_marginRight="30dp"
                       android:layout_marginLeft="5dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Logout"
                       android:fontFamily="@font/montserrat_semibold"
                       android:textSize="20dp"
                       android:textColor="@color/biru"
                       android:layout_marginRight="200dp"
                       android:layout_gravity="center"/>

               </LinearLayout>
               <LinearLayout
                   android:id="@+id/deleteLayout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingHorizontal="20dp"
                   android:paddingVertical="20dp"
                   android:background="@drawable/custom1"
                   >

                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/delete"
                       android:layout_gravity="center"
                       android:layout_marginRight="30dp"
                       android:layout_marginLeft="5dp"/>

                   <TextView
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:text="Delete account"
                       android:fontFamily="@font/montserrat_semibold"
                       android:textSize="20dp"
                       android:textColor="@color/biru"
                       android:layout_marginRight="200dp"
                       android:layout_gravity="center"/>

               </LinearLayout>



           </LinearLayout>
       </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>